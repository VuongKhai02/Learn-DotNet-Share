@model WorkWithDatabase_b3.ViewModel.CategoryyViewModel

<table class="table table-striped">
    <thead>
        <tr>
            <td colspan="3">

                <a href="/category/addcategory">Thêm mới</a>

            </td>
        </tr>
        <tr>
            <th scope="col">Mã</th>
            <th scope="col">Tên</th>
            @*<th scope="col">Tạo bởi</th>
            <th scope="col">Ảnh</th>
            <th scope="col">Ngày tạo</th>
            <th scope="col">Ngày cập nhật</th>
            <th scope="col">Tạo bởi</th>
            <th scope="col">Cập nhật bởi</th>
            <th scope="col">Xóa</th>*@
            <th scope="col">Hành động</th>
        </tr>
    </thead>
    <tbody>
        @{
            var stt = 1;
            foreach (var obj in Model.Data)
            {
                <tr>
                    <td>@stt</td>
                    <td>@obj.Name</td>
                    <td>
                        <button class="btn btn-primary">Sửa</button>
                        <button class="btn btn-danger">Xóa</button>
                    </td>
                </tr>
                stt++;
            }
        }
    </tbody>
</table>
